@inject NavigationManager NavigationManager

<MCard Style="margin:5px" Class="rounded-xl" OnClick="ShowDetail">
    <MCardText>
        <MRow Justify="JustifyTypes.Center">
            @if (IsLeft)
            {
                <MCol Cols="4">
                    <MImage Alt="@Blog.Title" Style="height:100%" Class="rounded-xl" Src="https://cdn.masastack.com/stack/images/website/masa-blazor/cards/cooking.png" />
                </MCol>
                <MSpacer></MSpacer>
                <MCol Cols="8">
                    <BlogListItemContent Blog="Blog"></BlogListItemContent>
                </MCol>
            }
            else
            {
                <MCol Cols="8">
                    <BlogListItemContent Blog="Blog"></BlogListItemContent>
                </MCol>
                <MSpacer></MSpacer>
                <MCol Cols="4">
                    <MImage Alt="@Blog.Title" Style="height:100%" Class="rounded-xl" Src="https://cdn.masastack.com/stack/images/website/masa-blazor/cards/cooking.png" />
                </MCol>
            }
        </MRow>
    </MCardText>
</MCard>

@code {
    [Parameter]
    public bool IsLeft { get; set; } = false;

    [Parameter]
    public VBlog Blog { get; set; } = new();

    void ShowDetail()
    {
        NavigationManager.NavigateTo($"/detail/{Blog.Id}");
    }
}

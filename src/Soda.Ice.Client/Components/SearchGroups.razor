@foreach (var group in _groups)
{
    <BlogGroup Item="@group"></BlogGroup>
}
@code {
    List<VBlogGroup> _groups = new List<VBlogGroup>()
    {
    };

    protected override Task OnInitializedAsync()
    {
        _groups = new List<VBlogGroup>();
        for (var i = 0; i < 20; i++)
        {
            _groups.Add(new VBlogGroup { Id = Guid.NewGuid(), Name = $"分组{i}", BlogCount = i });
        }
        return base.OnInitializedAsync();
    }
}
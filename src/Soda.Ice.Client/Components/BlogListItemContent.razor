<MCard Height="300" Flat>
    <MCardTitle>
        <PBlockText Primary="@Blog.Title"
                    Tags="@tags">
        </PBlockText>
    </MCardTitle>
    <MCardText>
        <div style="height:150px;">
            @Blog.Description
        </div>
    </MCardText>
    <div style="margin-top:30px">
        <MRow>
            <MCol Cols="8">
                <PBlockText>
                    <PrimaryContent>
                        <MIcon Left Small>mdi-calendar-month</MIcon>
                        @Blog.CreateTime.ToFormatDateString()
                    </PrimaryContent>
                </PBlockText>
            </MCol>
            <MCol Cols="2">
                <PBlockText>
                    <PrimaryContent>
                        <MIcon Left Small>mdi-eye</MIcon>
                        @Blog.BlogViewLogCount
                    </PrimaryContent>
                </PBlockText>
            </MCol>
            <MCol Cols="2">
                <PBlockText>
                    <PrimaryContent>
                        <MIcon Left Small>mdi-comment-text</MIcon>
                        33
                    </PrimaryContent>
                </PBlockText>
            </MCol>
        </MRow>
    </div>
</MCard>

@code {
    [Parameter]
    public VBlog Blog { get; set; } = new()
        {
            Title = "这是一个测试标题",
            Description = "这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容这是一个测试内容",
        };

    IEnumerable<BlockTextTag> tags = new List<BlockTextTag>()
    {
        new("分类1", "green", "white"),
        new("分类2", "purple", true)
    };
}
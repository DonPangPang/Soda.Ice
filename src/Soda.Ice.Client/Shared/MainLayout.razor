@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MApp>
    <MAppBar App>
        <MAppBarNavIcon>
            <ChildContent>
                <MButton Icon Href="/" Color="pink" XLarge>
                    <MIcon>
                        mdi-ice-pop
                    </MIcon>
                </MButton>
            </ChildContent>
        </MAppBarNavIcon>
        <MToolbarTitle>ICE BLOG</MToolbarTitle>
        <MSpacer></MSpacer>
        <MButton class="mx-2" Href="/search" Outlined>
            <MIcon>
                mdi-magnify
            </MIcon>
            搜索
        </MButton>
        <MButton class="mx-2"
                 Fab
                 Small
                 Dark
                 Target="_blank" Href="https://github.com/DonPangPang"
                 Color="primary">
            <MIcon>
                mdi-github
            </MIcon>
        </MButton>

    </MAppBar>

    <MMain>
        <MContainer Fluid Id="scrolling-sheet-3">
            <MErrorHandler>
                <MRow Justify="JustifyTypes.Center">
                    <MCol Lg="6" Style="min-width:900px;">
                        @Body
                    </MCol>
                    <MCol Lg="3" Style="min-width:300px;">
                        <UserInfo>

                        </UserInfo>
                        <br />
                        <MButton OnClick="ToAdminHome" Block Dark XLarge Class="rounded-xl">
                            去写一篇博客
                            <MIcon Right>mdi-login</MIcon>
                        </MButton>
                        <br />
                        <RecentPanel></RecentPanel>
                    </MCol>
                </MRow>
            </MErrorHandler>
        </MContainer>
    </MMain>
</MApp>

@code {
    void ToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    void ToAdminHome()
    {
        NavigationManager.NavigateTo("/admin");
    }
}